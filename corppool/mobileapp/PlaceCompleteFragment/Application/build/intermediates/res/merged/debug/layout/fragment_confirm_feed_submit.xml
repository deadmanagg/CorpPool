<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.corppool.controller.ConfirmFeedSubmit">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/lbl_startloc"
                android:autoLink="all"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/margin_medium"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/reqStartLoc"
                android:autoLink="all"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /></TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/lbl_endloc"
                android:autoLink="all"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingRight="@dimen/margin_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/reqEndLoc"
                android:autoLink="all"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /></TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reqStartDate"
                android:autoLink="all"
                android:paddingRight="@dimen/margin_medium"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/reqStartTime"
                android:autoLink="all"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:text="@string/emailLabel"
                />
            <EditText
                android:id="@+id/reqEmailId"
                android:autoLink="all"
                android:paddingRight="@dimen/margin_medium"
                android:layout_marginRight="33dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:text="@string/mobileLabel"
                />
            <EditText
            android:id="@+id/reqMobileNum"
            android:autoLink="all"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:inputType="phone"
                android:hint="Mobile"
            android:layout_height="wrap_content" />
</TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/confirmfeed_button"
            android:text="@string/confirmfeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_span="2"
            android:layout_gravity="center" />
        </TableRow>
    </TableLayout>

</FrameLayout>
